# 
# IPWorks 2022 C++ Edition - Sample Project
# 
# This sample project demonstrates the usage of IPWorks in a 
# simple, straightforward way. This is not intended to be a complete 
# application. Error handling and other checks are simplified for clarity.
# 
# Copyright (c) 2023 /n software inc. www.nsoftware.com
# 

ifeq ($(shell uname -s), "Darwin") # MACOS
R_PATH=-Wl,-rpath,../../lib64/,-rpath,.

FRAMEWORK = -framework Carbon -framework Security
LD_FLAGS = -lipworks.22.0 -L../../lib64/ libz.dylib libresolv.dylib
LD_FLAGS_SRC = -lz libz.dylib libresolv.dylib
OS_CFLAGS = -D UNIX64 -arch x86_64
MACOS = "darwin% Darwin% macos%"

all:
	g++ $(OS_CFLAGS) -D UNIX -o smpp smpp.cpp  -I../../include/ $(LD_FLAGS) $(FRAMEWORK) $(R_PATH) 
else # LINUX
ifeq ($(shell uname -m), x86_64)
  LIB=lib64
else
  LIB=lib
endif

R_PATH=-Wl,-rpath,../../$(LIB)/,-rpath,.
LD_FLAGS = -lipworks  -L../../$(LIB)/ 
LD_FLAGS_SRC = -lz 

all:
	g++ -D UNIX -o smpp smpp.cpp  -I../../include/ $(LD_FLAGS) $(R_PATH) 

src: ../../src/ipworks.o
	g++ -D UNIX -o smpp ../../src/ipworks.o smpp.cpp  -I../../include/ $(LD_FLAGS_SRC)

../../src/ipworks.o:
	g++ -c -fno-exceptions -fno-rtti -fPIC -o ../../src/ipworks.o ../../src/ipworks.cpp

clean:
	rm -f ../../src/*.o
	rm -f smpp *.o
endif